  <odoo>
    <data>


            <record model="ir.ui.view" id="wizard_revive_form">
                      <field name="name">thewalkingdead Revive</field>
                      <field name="model">thewalkingdead.wizard_revive</field>
                      <field name="arch" type="xml">
                         <form>
                            <field name="coins"/>
                            <field name="survivors_dead" mode="tree">
                                 <tree decoration-danger="infected>0">
                                      <field name="name"/>
                                      <field name="player"/>
                                      <field name="infected"/>
                                      <button name="revive" type="object" string="Revive Survivor for 100 dCoins" class="oe_highlight"/>
                                 </tree>
                            </field>

                         </form>
                      </field>
            </record>
            <record model="ir.actions.act_window" id="wizard_survivor_revive_act_window">
                  <field name="name">thewalkingdead Survivor Revivor Wizard</field>
                  <field name="res_model">thewalkingdead.wizard_revive</field>
                  <field name="type">ir.actions.act_window</field>
                  <field name="view_id" ref="wizard_revive_form"></field>
                  <field name="target">new</field>
                  <field name="view_mode">form</field>
            </record>


    </data>
</odoo>