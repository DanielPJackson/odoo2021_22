<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="thewalkingdead.player_tree">
            <field name="name">thewalkingdead player Tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">

                <tree>
                    <field name="name" />
                    <field name="survivors" widget="many2many_tags" />
                    <field name="quantity_survivors" />
                </tree>
            </field>
        </record>



      <record model="ir.ui.view" id="thewalkingdead.player_form">
      <field name="name">thewalkingdead player form</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <form>
        <header>

        <button name="create_survivor" type="object" string="Create Survivor" class="oe_highlight"/>


        </header>
        <sheet>
          <group>
          <field name="name"/>
          <field name="energy"/>
          <field name="water"/>
          <field name="food"/>
          <field name="oil"/>
          <field name="survivors"/>

          </group>


          </sheet>
        </form>
      </field>
    </record>
              <record model="ir.ui.view" id="thewalkingdead.player_search">
              <field name="name">thewalkingdead player search</field>
              <field name="model">res.partner</field>
              <field name="arch" type="xml">
                 <search>
                    <field name="name"/>
                    <filter name="player_partner" string="Is Player" domain="[('is_player','=',True)]"></filter>

                 </search>
              </field>
    </record>
    </data>
</odoo>