
<odoo>
    <data>

        <record model="ir.ui.view" id="thewalkingdead.travel_tree">
            <field name="name">thewalkingdead travel Tree</field>
            <field name="model">thewalkingdead.travel</field>
            <field name="arch" type="xml">
                <tree>
                   <field name="name" />
                   <field name="origin" />
                   <field name="destiny" />
                   <field name="roads" />
                   <field name="date_departure" />
                   <field name="date_end" />
                   <field name="progress" widget="progressbar"/>
                   <!--<field name="progress" widget="progressbar"/>    -->
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="thewalkingdead.travel_form">
            <field name="name">thewalkingdead travel Form</field>
            <field name="model">thewalkingdead.travel</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="name"/>
                   </header>
                    <sheet>
                        <group>
                        <group>
                        <field name="name" />

                        <field name="origin" />
                        <field name="destiny" attrs="{'readonly': [('origin', '=', False)]}"/>
                        <field name="roads" />
                        <field name="player"  attrs="{'readonly': [('origin', '=', False)]}"/>

                    </group>
                    <group>
                        <field name="date_departure" />
                        <field name="date_end" />
                        <!--<field name="progress" widget="progressbar"/>    -->
                    </group>

                </group>

                <notebook>
                    <page name="passenger" string="Passengers">

                        <field name="passengers" />
                    </page>
                </notebook>

                <button name="launch_travel" type="object" string="Launch travel" class="oe_highlight" />
                    </sheet>

                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="thewalkingdead.travel_calendar">
            <field name="name">thewalkingdead travel calendar</field>
            <field name="model">thewalkingdead.travel</field>
            <field name="arch" type="xml">
                <calendar date_start="date_departure" date_stop="date_end" color="roads">
                    <field name="name" />
                   <field name="origin" />
                   <field name="destiny" />
                   <field name="roads" />
                   <field name="progress" widget="progressbar"/>
                </calendar>
            </field>
        </record>


        </data>
        </odoo>